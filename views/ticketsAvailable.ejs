<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Ticketac</title>
</head>

<body>
    <%- include("navbar") %>

        <div class="home">
            <h3 class="homeTitle">Tickets available : </h3>


            <div class="resultField">

                <!-- Result Number 1 -->
                <% for( let i = 0; i < newJourney.length; i++ ) { %>
                    
                    <div class="card w-50">
                        <div class="card-body resultCard">
                            <div><%= newJourney[i].departure %> / <%= newJourney[i].arrival %>  </div>
                            <div><small class="text-muted">train departure at : <%= newJourney[i].departureTime %> pm</small></div>
                            <div style="display: flex;justify-content: center;align-items: center;">
                             <div style="font-size: 20px;"><%= newJourney[i].price %> â‚¬</div>
                             
        
                             <form action="/ticketsAvailable" method="POST">
                                <input type="hidden" name="ticketDepart" value=<%= newJourney[i].departure%>>
                                <input type="hidden" name="ticketArrivee" value=<%= newJourney[i].arrival%>>
                                <input type="hidden" name="ticketHeureDepart" value=<%= newJourney[i].departureTime %>>
                                <input type="hidden" name="ticketPrix" value=<%= newJourney[i].price %>>
                                <input type="hidden" name="ticketDate" value=<%= newJourney[i].date %>>
                                <input type="hidden" name="idUser" value=<%= i %>>
                                <button type="submit" class="btn btn-danger mx-sm-3">OK</button>
                            </form>
                            </div>  
                        </div>
                    </div>
                <% } %>

    
            </div>


        </div>

</body>