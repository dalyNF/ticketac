<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="./stylesheets/style.css">
    <title>TICKETAK</title>
</head>

<body>
    <%- include('navbar') %>




        <div class="home">

            <div class="row">

                <div class="col-12 text-center get_started">
                </div>

                <!-- SIGN IN AREA -->
                <div class="formsign col-12 col-sm-6 text-center">
                    <div class="formArea">

                        <h4 class="titleForm">Sign In</h4>

                        <form action="/sign-in" method="POST">
                            <div class="form-group">
                                <input name="email" type="email" class="form-control" aria-describedby="emailHelp"
                                    placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <input name="password" type="password" class="form-control"
                                    placeholder="Enter password">
                            </div>

                            <button type="submit" class="btn btn-danger">Confirm</button>
                        </form>
                    </div>
                </div>

              

            <!-- Sign-up -->
            <form style="text-align: center" action="/sign-up" method="POST">

                    <!-- Login title -->
                <h3 class="logIn">Sign-up : </h3>
        
                <div class="form-group inputResume">
                    <input name="signUpFirstName" type="text" class="form-control " id="inputFirstNameSU" placeholder="FirstName">  
                </div>
   
   
                <div class="form-group inputResume">
                    <input name="signUpName" type="text" class="form-control " id="inputNameSU" placeholder="Name">  
                </div>
                
                
        
                <div class="form-group inputResume">
                    <input name="signUpEmail" type="text" class="form-control" id="inputEmailSU" placeholder="Email">
                </div>

                <div class="form-group inputResume">
                    <input name="signUpPassword" type="password" class="form-control" id="inputPasswordSU" placeholder="Password">
                </div> 

                <button type="submit" class="btn btn-danger">Confirm</button>
        
            </form>


        </div>

        <div class="footer d-flex justify-content-center">
